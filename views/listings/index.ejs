<% layout('/layouts/boilerplate') %>

<div class="container mt-4 px-4">
  <div class="row row-cols-sm-1 row-cols-md-2 row-cols-lg-3 mb-4"> 
    <% for(let list of allListings ) { %>
      <div class="col mb-2">
        <div class="card listing-card">
          <a href="/listings/<%=list._id %>" class="card-img">
            <img src="<%= list.image.url%>" class="card-img-top" alt="img" style="height: 20rem;">
            <div class="card-body">       
              <p class="card-text">
                <b><%= list.title %></b><br>
                &#8377; <%= list.price.toLocaleString('en-IN') %>/night
              </p>
            </div>
          </a>
        </div>
      </div>
    <% } %>
  </div>
</div>

