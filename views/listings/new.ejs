<% layout('./layouts/boilerplate') %>

<div class="row">
  <div class="col-8 offset-2" >
    <h3 class="mt-3">Create a new Listing</h3>
    <!-- novalidate -> change the default browser -->
     <!-- enctype -> throgh this we can send files tp backende -->
    <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
      <div>
        <div class="mb-3">
          <label for="title" class="form-label">Enter title: </label>
          <input type="text" id="title" class="form-control" name="listing[title]" placeholder="eg: Shiv temple" required> 
          <div class="valid-feedback">Title looks good</div>
          <div class="invalid-feedback">Title should be valid</div>
        </div>
        

        <div class="mb-3">
          <label for="desc" class="form-label">Enter description: </label>
          <textarea id="desc" class="form-control" name="listing[description]" required></textarea>
          <div class="invalid-feedback">Description should be valid</div> 
        </div>
        
        <!-- <div class="mb-3">
          <label for="image" class="form-label">Enter image url : </label>
          <input type="text" id="image" class="form-control" name="listing[image]" placeholder="eg. https://images.unsplash.com/photo-150...."> 
          <div class="invalid-feedback">Description should be valid</div> 
        </div> -->
        
        <div class="mb-3">
          <label for="image" class="form-label">Upload image </label>
          <input type="file" id="image" class="form-control" name="listing[image]" placeholder="eg. https://images.unsplash.com/photo-150...."> 
          <div class="invalid-feedback">File should be of type jpg,png,..</div>
        </div>

        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="title"  class="form-label">Enter price: </label>
            <input class="form-control" id="price" name="listing[price]" placeholder="eg. 1203" required> 
            <div class="invalid-feedback">Price should be valid</div>
          </div>

          <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Enter country: </label>
            <input type="text" id="country" class="form-control" name="listing[country]" placeholder="eg: India" required> 
            <div class="invalid-feedback">Country should be valid</div>
          </div>
        </div>
        
        <div class="mb-3">
          <label for="loc" class="form-label">Enter location: </label>
          <input type="text" id="loc" class="form-control" name="listing[location]" placeholder="eg. Jaipur" required> 
          <div class="invalid-feedback">Location should be valid</div>
        </div>
        <button class="btn btn-dark mt-3 mb-3 css-add-btn">Save</button>
      </div>
    </form>
  </div>
</div>
